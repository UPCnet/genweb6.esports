<html xmlns="http://www.w3.org/1999/xhtml"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n" metal:use-macro="context/main_template/macros/master" i18n:domain="genweb6.esports">


    <body class="competicio-view">

        <metal:block fill-slot="top_slot" tal:define="disable_column_one python:request.set('disable_plone.leftcolumn',1);
                               disable_column_two python:request.set('disable_plone.rightcolumn',1);" />

        <div metal:fill-slot="portlets_one_slot">
            <tal:comment tal:replace="nothing">get rid of the left hand column portlets to avoid confusion</tal:comment>
        </div>

        <div metal:fill-slot="main">

            <div tal:define="item view/get_info">
                <div class="row mb-4 mt-3">
                    <div class="col-md-12">
                        <div class="row">

                            <div class="col-md-5 col-sm-12">
                                <ul class="list-unstyled">
                                    <li>
                                        <img tal:attributes="src item/img_dep_url" tal:condition="item/img_dep_url" class="img-thumbnail"/>
                                    </li>
                                </ul>
                            </div>

                            <div id="info" class="col-md-7">
                                <h2 tal:condition="item/deporte" tal:content="item/deporte" class="mb-0"/>
                                <h3 tal:define="denom item/denom;
                                       competi item/competi" tal:condition="python:denom or competi" tal:content="string:${item/denom} (ref. ${item/competi})" class="text-primary"/>
                                <p class="mb-0 fw-bold" tal:condition="item/campeonato">CAMPIONAT:
                                    <span class="fw-normal" tal:content="item/campeonato"></span>
                                </p>
                                <p class="mb-0 fw-bold" tal:condition="item/competicionie">Tipus competicio:
                                    <span class="fw-normal" tal:content="item/competicionie"></span>
                                </p>
                                <p class="mb-0 fw-bold" tal:condition="item/sexo">Sexe:
                                    <span class="fw-normal" tal:content="item/sexo"></span>
                                </p>
                                <p class="mb-0 fw-bold" tal:condition="item/modalidad">Modalitat:
                                    <span class="fw-normal" tal:content="item/modalidad"></span>
                                </p>
                                <p class="mb-0 fw-bold" tal:condition="item/division">Divisio:
                                    <span class="fw-normal" tal:content="item/division"></span>
                                </p>
                                <p class="mb-0 fw-bold" tal:condition="item/grupo">Grup:
                                    <span class="fw-normal" tal:content="item/grupo"></span>
                                </p>
                                <p class="mb-0 fw-bold" tal:condition="view/lugar">Lloc:
                                    <span class="fw-normal" tal:content="view/lugar">Instal·lació i complexe</span>
                                </p>
                                <p class="mb-0 fw-bold" tal:condition="item/fase">Fase:
                                    <span class="fw-normal" tal:content="item/fase"></span>
                                </p>
                                <p class="mb-0 fw-bold" tal:define="inici item/fecini;
                                       fi item/fecfin" tal:condition="python:inici or fi">Dates de realització:
                                    <span class="fw-normal" tal:content="inici"></span>
                                    <span class="fw-normal" tal:condition="fi">-                                        <span tal:content="fi"></span>
                                    </span>
                                </p>
                                <div class="mt-2">
                                    <a tal:attributes="href string:https://esportsonline.upc.edu${item/enlace}" tal:condition="item/enlace" class="btn btn-success">Calendaris, Resultats i Classificacions
                                    </a>
                                </div>
                                <div class="mt-2">
                                    <p class="mb-0">
                                        <a class="text-decoration-none link-primary" tal:attributes="href string:${item/normativa}" tal:condition="item/normativa">Consulta  la normativa<i class="bi bi-link-45deg"></i>
                                        </a>
                                    </p>
                                    <p>
                                        <a class="text-decoration-none link-primary" tal:attributes="href string:https://esportsonline.upc.edu${item/documentoanexo}" tal:condition="item/documentoanexo">Documentació associada a la competició  <i class="bi bi-file-earmark"></i>
                                        </a>
                                    </p>
                                </div>

                            </div>

                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-5" tal:define="inici item/feciniins; fi item/fecfinins">
                        <h3 tal:condition="python: inici or fi" class="mb-3 text-primary">DATES D'INSCRIPCIÓ</h3>
                        <p class="fw-bold mb-0" tal:condition="inici">
                            Del:
                            <span class="fw-normal" tal:content="inici"></span>
                        </p>
                        <p class="fw-bold" tal:condition="fi">
                            Fins:
                            <span class="fw-normal" tal:content="fi"></span>
                        </p>
                        <div tal:condition="view/credits">
                            <img tal:attributes="src string:${context/absolute_url}/++theme++genweb6.esports/theme/img/${view/credits}.jpg" />
                            <p>
                                <span>Per l'obtenció dels Crèdits es requereix un mínim de presència.</span>
                            </p>
                        </div>
                    </div>

                    <div class="col-md-7">
                        <h3 tal:condition="view/tarifas_title" class="mb-3 text-primary">QUOTA D'INSCRIPCIÓ</h3>
                        <ul class="list-unstyled">
                            <li tal:repeat="tarifa view/tarifas">
                                <tal:omit-tag tal:condition="tarifa/importe">
                                    <p class="fw-bold mb-0">Preu per Equip:
                                        <span class="fw-normal" tal:content="tarifa/importe"></span>
                                        <span class="fw-normal">€</span>
                                    </p>
                                </tal:omit-tag>
                                <tal:omit-tag tal:condition="tarifa/fianzacur">
                                    <p class="fw-bold mb-0">Fiança per Equip:
                                        <span class="fw-normal" tal:content="tarifa/fianzacur"></span>
                                        <span class="fw-normal">€</span>
                                    </p>
                                </tal:omit-tag>
                                <tal:omit-tag tal:condition="tarifa/impjugabo">
                                    <p class="fw-bold mb-0">Preu Jugador UPC:
                                        <span class="fw-normal" tal:content="tarifa/impjugabo"></span>
                                        <span class="fw-normal">€</span>
                                    </p>
                                </tal:omit-tag>
                                <tal:omit-tag tal:condition="tarifa/fianzajugabo">
                                    <p class="fw-bold mb-0">Fiança Jugador UPC:
                                        <span class="fw-normal" tal:content="tarifa/fianzajugabo"></span>
                                        <span class="fw-normal">€</span>
                                    </p>
                                </tal:omit-tag>
                                <tal:omit-tag tal:condition="tarifa/impjugnoabo">
                                    <p class="fw-bold mb-0">Preu Jugador No UPC:
                                        <span class="fw-normal" tal:content="tarifa/impjugnoabo"></span>
                                        <span class="fw-normal">€</span>
                                    </p>
                                </tal:omit-tag>
                                <tal:omit-tag tal:condition="tarifa/fianzajugnoabo">
                                    <p class="fw-bold mb-0">Fiança Jugador No UPC:
                                        <span class="fw-normal" tal:content="tarifa/fianzajugnoabo"></span>
                                        <span class="fw-normal">€</span>
                                    </p>
                                </tal:omit-tag>
                                <tal:omit-tag tal:condition="tarifa/impjugotro">
                                    <p class="fw-bold mb-0">Preu Altres Jugadors:
                                        <span class="fw-normal" tal:content="tarifa/impjugotro"></span>
                                        <span class="fw-normal">€</span>
                                    </p>
                                </tal:omit-tag>
                                <tal:omit-tag tal:condition="tarifa/fianzajugotro">
                                    <p class="fw-bold mb-0">Fiança Altres Jugadors:
                                        <span class="fw-normal" tal:content="tarifa/fianzajugotro"></span>
                                        <span class="fw-normal">€</span>
                                    </p>
                                </tal:omit-tag>
                            </li>
                        </ul>
                    </div>

                </div>

            </div>

        </div>

    </body>


</html>